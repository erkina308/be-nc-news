{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an array of an article by it's id",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "article": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the given article_id",
    "exampleResponse": {
      "comment": [
        {
          "body": "Text from the article..",
          "votes": 0,
          "author": "weegembump",
          "article_id": 1,
          "created_at": "2018-05-30T15:59:13.341Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment for the chosen article",
    "exampleResponse": {
      "comment": [
        {
          "body": "Text from the article..",
          "votes": 0,
          "author": "weegembump",
          "article_id": 1,
          "created_at": "2018-05-30T15:59:13.341Z"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "increments or decrements the votes of a selected article",
    "queries": ["author", "topic", "sort_by", "order"],
    "requestBody": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "article": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 1,
          "comment_count": 6
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the requested comment if comment exists",
    "exampleResponse": {
      "status": 204
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "lurker",
          "name": "do_nothing",
          "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png"
        }
      ]
    }
  }
}
